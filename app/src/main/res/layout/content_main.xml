<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fastcome1985.learn.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/encrypt_part"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="文件部分加密"
        android:textColor="#000000" />

    <Button
        android:id="@+id/decrypt_part_newfile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="文件部分解密成新文件"
        android:textColor="#000000" />

    <Button
        android:id="@+id/decrypt_part"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="文件部分解密原始文件"
        android:textColor="#000000" />

    <Button
        android:id="@+id/encrypt_full"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="全文件加密"
        android:textColor="#000000" />

    <Button
        android:id="@+id/decrypt_full"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="全文件解密"
        android:textColor="#000000" />
</LinearLayout>
